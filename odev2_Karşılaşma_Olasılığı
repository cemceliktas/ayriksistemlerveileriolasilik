        "import math\n",
        "def faktoriyelHesapla(f): # Faktoriyel Hesaplama Fonksiyonu\n",
        "    if f==1:       \n",
        "        return 1\n",
        "    else: \n",
        "        return f * faktoriyelHesapla(f-1)\n"
      ],
      "execution_count": 0,
      "outputs": []
    },
    {
      "cell_type": "code",
      "metadata": {
        "id": "d8aoWXUp97rB",
