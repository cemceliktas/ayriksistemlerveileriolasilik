        "colab": {}
      },
      "source": [
        "def kombinasyonHesapla(n,r):# Kominasyon Hesaplama Fonksiyonu\n",
        "    return int(faktoriyelHesapla(n)/(faktoriyelHesapla(n-r)*faktoriyelHesapla(r)))"
      ],
      "execution_count": 0,
      "outputs": []
    },
