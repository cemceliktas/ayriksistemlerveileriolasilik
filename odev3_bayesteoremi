      "source": [
        "import math\n",
        "\n",
        "def bayes(pa=None, pb=None, pab=None, pba=None):\n",
        "\t'''\n",
        "\t\tP(A|B) * P(B) = P(B|A) * P(A)\n",
        "\n",
        "\t\tTR; Bayes teorem hesaplama fonksiyonu. Fonksiyon boş bırakılan \n",
        "\t\targumanı hesaplamaktadır ve geri döndürmektedir.\n",
        "\n",
        "\t\tEN; Function of Bayes theorem calculation. Function calculates \n",
        "\t\tempty arguments and return it.\n",
        "\n",
        "\t'''\n",
        "\tif pa == None: \n",
        "\t\t'''\n",
        "\t\t\tP(A) = (P(A|B) * P(B)) / P(B|A)\n",
        "\t\t'''\n",
        "\t\treturn (pab * pb) / pba\t\n",
        "\telif pb == None:\n",
        "\t\t'''\n",
        "\t\t\tP(B) = (P(B|A) * P(A)) / P(A|B)\n",
        "\t\t'''\n",
        "\t\treturn (Pba * pa) / pab\n",
        "\telif pab == None:\n",
        "\t\t'''\n",
        "\t\t\tP(A|B) = (P(B|A) * P(A)) / P(B)\n",
        "\t\t'''\n",
        "\t\treturn (pba) * (pa) / pb\n",
        "\telif pba == None:\n",
        "\t\t'''\n",
        "\t\t\tP(B|A) = (P(A|B) * P(B)) / P(A)\n",
        "\t\t'''\n",
        "\t\treturn (pab * pb) / pa\n",
        "\t\t\n",
        "\n",
        "\n",
        "\n",
        "if __name__ == '__main__':\n",
        "\t\n",
        "\tpa= 0.77 \n",
        "\n",
        "\tpb = 0.52\n",
        "\n",
        "\tpab = 0.28\n",
        "\n",
        "\tpba = bayes(pa, pb, pab)\n",
        "\n",
        "\tprint('Bir sonraki gun ucarken kar yagma olasiligi :', P_B_A)\n"
